
<h1>New Task for <%= @board.name %></h1>

<%= form_with model: [@board, @task] do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <%= form.submit "Create Task" %>
<% end %>

<%= link_to "Back", board_tasks_path(@board) %>