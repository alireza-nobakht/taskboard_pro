<%= turbo_frame_tag dom_id(@board) do %>
  <div class="board bg-green-800 text-white p-4 rounded shadow border border-gray-600 mb-4">
    <p class="text-sm text-gray-300">ID: <%= @board.id %></p>
    <p class="text-xl font-semibold"><%= @board.name %></p>

    <%= link_to "← Back", boards_path, class: "inline-block mt-3 text-blue-300 hover:underline" %>
  </div>
<% end %>